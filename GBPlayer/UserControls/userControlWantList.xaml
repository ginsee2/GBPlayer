                        <Button.Content>
                            <Image x:Uid="Image_6" Height="16" Width="16"  VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Source="/GBPlayer;component/Images/imgboutons/enregistrer24.png"></Image>
                        </Button.Content>
                    </Button>
                </DockPanel>
            </DockPanel>
