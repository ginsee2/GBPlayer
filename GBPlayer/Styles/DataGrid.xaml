    <Style x:Uid="Style_10" x:Key="GBStyleScrollViewerDataGrid" TargetType="{x:Type ScrollViewer}" BasedOn="{x:Null}">
        <Setter x:Uid="Setter_39" Property="Foreground" Value="#FFFFFFFF"/>
        <Setter x:Uid="Setter_40" Property="Background" Value="{x:Null}"/>
        <Setter x:Uid="Setter_41" Property="BorderThickness" Value="1,0,0,1"/>
        <Setter x:Uid="Setter_42" Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter x:Uid="Setter_43" Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter x:Uid="Setter_44" Property="Template">
            <Setter.Value>
                <ControlTemplate x:Uid="ControlTemplate_10" TargetType="{x:Type ScrollViewer}">
                    <Grid x:Uid="Grid_4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Uid="ColumnDefinition_3" Width="Auto" />
                            <ColumnDefinition x:Uid="ColumnDefinition_4" Width="*" />
                            <ColumnDefinition x:Uid="ColumnDefinition_5" Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition x:Uid="RowDefinition_3" Height="Auto" />
                            <RowDefinition x:Uid="RowDefinition_4" Height="*" />
                            <RowDefinition x:Uid="RowDefinition_5" Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border x:Uid="Border_3" Margin="1" Grid.ColumnSpan="3" CornerRadius="2" BorderThickness="1" BorderBrush="{StaticResource W8Background}"
                                Background="{StaticResource W8Background}"/>
                        <Button x:Uid="Button_1" Margin="1" Focusable="false" Command="{x:Static DataGrid.SelectAllCommand}"  
                            Style="{StaticResource DataGridSelectAllButtonStyle}"
                            Visibility="{Binding HeadersVisibility,  ConverterParameter={x:Static DataGridHeadersVisibility.All}, 
                            Converter={x:Static DataGrid.HeadersVisibilityConverter},RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                            Width="{Binding CellsPanelHorizontalOffset, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                        <DataGridColumnHeadersPresenter x:Uid="PART_ColumnHeadersPresenter" x:Name="PART_ColumnHeadersPresenter" Grid.Column="1"/>
                        <Border x:Uid="Border_4" Margin="1" Grid.Row="1" CornerRadius="2" BorderThickness="1" BorderBrush="{StaticResource W8Background}"
                                Background="{StaticResource W8Background}"/>
                        <ScrollContentPresenter x:Uid="ScrollContentPresenter" x:Name="ScrollContentPresenter"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Margin="{TemplateBinding Padding}" 
                                Content="{TemplateBinding Content}" 
                                ContentTemplate="{TemplateBinding ContentTemplate}" 
                                CanContentScroll="{TemplateBinding CanContentScroll}" 
                                Opacity="1"/>
                        <ScrollBar x:Uid="PART_HorizontalScrollBar" x:Name="PART_HorizontalScrollBar" 
                            Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" 
                            Grid.Column="1" 
                            Grid.Row="2" 
                            Style="{DynamicResource MenuScrollBar}" 
                            Orientation="Horizontal" 
                            Value="{Binding Path=HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" 
                            ViewportSize="{TemplateBinding ViewportWidth}" 
                            Minimum="0" 
                            Maximum="{TemplateBinding ScrollableWidth}" 
                            AutomationProperties.AutomationId="HorizontalScrollBar" 
                            Opacity="0.8"/>
                        <ScrollBar x:Uid="PART_VerticalScrollBar" x:Name="PART_VerticalScrollBar" 
                            Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" 
                            Grid.Column="2" 
                            Grid.Row="1" 
                            Style="{DynamicResource MenuScrollBar}" 
                            Orientation="Vertical" 
                            Value="{Binding Path=VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" 
                            ViewportSize="{TemplateBinding ViewportHeight}" 
                            Minimum="0"      
                            Maximum="{TemplateBinding ScrollableHeight}" 
                            AutomationProperties.AutomationId="VerticalScrollBar" 
                            Opacity="0.8"/>
