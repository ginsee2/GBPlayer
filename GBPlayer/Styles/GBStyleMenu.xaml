            </Trigger>
            <Trigger x:Uid="Trigger_5" Property="IsEnabled" Value="False">
                <Setter x:Uid="Setter_28" Property="Foreground">
                    <Setter.Value>
                        <SolidColorBrush x:Uid="SolidColorBrush_3" Color="{StaticResource DisabledForegroundColor}" />
