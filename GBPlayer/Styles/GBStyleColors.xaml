<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <!--DEFINITION DES COULEURS POUR CONTAINERS-->
    <LinearGradientBrush x:Key="ContainerBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Transparent" Offset="1"/>
        <GradientStop Color="Transparent"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ContainerBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#999" Offset="0.0"/>
                <GradientStop Color="#999" Offset="1.0"/>
            </GradientStopCollection>
        </GradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ContainerDisableBorderBrush" Color="#EEE" />
    <SolidColorBrush x:Key="TreeViewExpand" Color="Orange"/>
    <SolidColorBrush x:Key="TreeViewCollapse" Color="YellowGreen"/>

    <!--DEFINITION DES COULEURS DES ITEMS-->
    <SolidColorBrush x:Key="ItemBorderBrush"  Color="#FF2C383F"/>
    <SolidColorBrush x:Key="ItemTextBrush" Color="Black"/>
    <LinearGradientBrush x:Key="ItemNotSelectedFill" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="Beige" Offset="0"/>
        <GradientStop Color="Beige" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ItemHoverFill" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFF1FBFF" Offset="0"/>
        <GradientStop Color="#FF9CB9C6" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ItemSelectedFill" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFD9F4FF" Offset="0"/>
        <GradientStop Color="#FF74BADA" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ItemSelectedInactiveFill" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFF1FBFF" Offset="0"/>
        <GradientStop Color="#FF9CB9C6" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ItemSelectedHoverFill" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFD9F4FF" Offset="0"/>
        <GradientStop Color="#FF276E9A" Offset="1"/>
    </LinearGradientBrush>

    <!--DEFINITION D'UN STYLE APPLE-->
    <Color x:Key="APCouleurHautBordure">#FF7B7B7B</Color>
    <Color x:Key="APCouleurBasseBordure">#FF606060</Color>
    <Color x:Key="APCouleurHauteBackground">#FF8B8B8B</Color>
    <Color x:Key="APCouleurSeuil1Background">#FF737373</Color>
    <Color x:Key="APCouleurSeuil2Background">#FF555555</Color>
    <Color x:Key="APCouleurSeuil3Background">#FF5D5D5D</Color>
    <Color x:Key="APCouleurBasseBackground">#FF747474</Color>
    <Color x:Key="APCouleurOmbreBackground">#FFD0D0D0</Color>
    <Color x:Key="APCouleurOmbreForeground">#FF777777</Color>
    
    <SolidColorBrush x:Key="APBrushFenetreBackground">#FFF2F2F2</SolidColorBrush>
    <SolidColorBrush x:Key="APBrushFenetreBrushBorder">#FF606060</SolidColorBrush>
    <Color x:Key="APColorFenetreBrushBorder">#FF606060</Color>
    <SolidColorBrush x:Key="APBrushItemBackground">White</SolidColorBrush>
    <SolidColorBrush x:Key="APBrushTexteForeground">Black</SolidColorBrush>
    <LinearGradientBrush x:Key="APBrushBoutonBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{StaticResource APCouleurHautBordure}" />
                <GradientStop Color="{StaticResource APCouleurBasseBordure}" Offset="1.0" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="APBrushBorderBackground" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#b4c2cf" />
                <GradientStop Color="#6d8ca8" Offset="1.0" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="APBrushBoutonBackground" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{StaticResource APCouleurHauteBackground}" />
                <GradientStop Color="{StaticResource APCouleurSeuil1Background}" Offset="0.49" />
                <GradientStop Color="{StaticResource APCouleurSeuil2Background}" Offset="0.50" />
                <GradientStop Color="{StaticResource APCouleurSeuil3Background}" Offset="0.51" />
                <GradientStop Color="{StaticResource APCouleurBasseBackground}" Offset="1.0" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="APBrushBoutonForeground">#FFFEFEFE</SolidColorBrush>
